shared-workspace-lockfile=true
link-workspace-packages=true
fetch-retries=3

# Hoist packages that webpack/Next.js needs to resolve transitively.
# Without these, pnpm's isolated node_modules breaks webpack module resolution
# for packages that use bare specifiers internally (e.g. recharts → d3-*).
public-hoist-pattern[]=d3-*
public-hoist-pattern[]=*d3*
public-hoist-pattern[]=react
public-hoist-pattern[]=react-dom
public-hoist-pattern[]=next
