{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@config/*": ["./config/*"],
      "@trade-pulse/ui": ["../../packages/ui/src/index.ts"],
      "@trade-pulse/ui/*": ["../../packages/ui/src/*"],
      "@trade-pulse/types": ["../../packages/types/src/index.ts"],
      "@trade-pulse/types/*": ["../../packages/types/src/*"],
      "@trade-pulse/config": ["../../packages/config/src/index.ts"],
      "@trade-pulse/config/*": ["../../packages/config/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", "scripts"]
}
