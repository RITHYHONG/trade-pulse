rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper to check if user has a specific role
    function hasRole(role) {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    // Helper to check for admin or superadmin
    function isAdmin() {
      return hasRole('admin') || hasRole('superadmin');
    }

    // Helper to check for editor or higher
    function isEditor() {
      return hasRole('editor') || isAdmin();
    }

    // Helper to check for moderator or higher
    function isModerator() {
      return hasRole('moderator') || isEditor();
    }

    // Users collection rules
    match /users/{userId} {
      // Allow users to read their own profile, admins and moderators can read all
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin() || hasRole('moderator'));
      
      // Prevent privilege escalation: users cannot set their own role on create
      allow create: if request.auth != null && request.auth.uid == userId 
                   && (!('role' in request.resource.data) || request.resource.data.role == 'user');
                   
      // Allow update if own profile (role cannot be changed) or if admin/moderator
      allow update: if request.auth != null && (
        (request.auth.uid == userId && request.resource.data.role == resource.data.role) ||
        isAdmin() || hasRole('moderator')
      );
    }

    // Blog posts - public read for authorized roles
    match /posts/{postId} {
      allow read: if isModerator(); // Only moderators, editors, and admins can read blog posts
      allow create: if isEditor(); // Only editors and higher can create posts
      allow update, delete: if isEditor() && 
        (resource.data.authorId == request.auth.uid || isAdmin());
    }

    // Contact form submissions
    match /contacts/{contactId} {
      allow create: if true; // Allow anyone to submit a contact form
      allow read, update, delete: if isAdmin();
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
