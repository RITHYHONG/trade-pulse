rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Profile images - users can upload and access their own profile images
    match /profile-images/{userId}/{allPaths=**} {
      allow read: if true; // Allow public read access to profile images
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Blog post images - authenticated users can upload
    match /blog-images/{allPaths=**} {
      allow read: if true; // Public read access to blog images
      allow write: if request.auth != null; // Authenticated users can upload blog images
      allow delete: if request.auth != null;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}